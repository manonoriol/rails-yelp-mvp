<div class="title text-center border bg-secondary text-white">
<h1><%= @restaurant.name %></h1>
</div>

<div class="restaurant-details text-center m-2">
  <h3>Address</h3>
  <p><%= @restaurant.address %></p>
  <h3>Phone Number</h3>
  <p><%= @restaurant.phone_number %></p>
  <h3>Category</h3>
  <p><%= @restaurant.category %></p>
</div>

<div class="reviews text-center">
  <h3>Reviews</h3>
<ul>
<% @restaurant.reviews.each do |review| %>
<li><%= review.content %>: <%= "⭐️" * review.rating %></li>
<% end %>
</ul>
</div>
<div class="btns text-center">
<%= link_to '+ Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-dark m-1" %><br>
<%= link_to 'Go back to restaurant list', restaurants_path, class: "btn btn-dark"%>
</div>


<div class="review-form m-2">

<h1> Add a review for <%= @restaurant.name %> </h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: 0..5, prompt: "Select one" %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>

</div>

